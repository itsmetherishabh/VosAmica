<div class="container-fluid" style=" border-top: 1px solid;background-image: linear-gradient(#E6DADA, #274046);">
  <%- include('partials/header') %>
  <div class="row">
    <div class="col-lg-5 col-md-6 col-10 mt-4" style="margin:auto; color:rgb(5, 5, 5);padding:2rem  ; background-color: rgba(2, 12, 29 ,0.7) ; border-radius: 0.5rem; margin-bottom: 2rem;"  >
    <h2 style="text-align:center;">
      REGISTER YOURSELF HERE
    </h2>
    <form action="/register" method="post" class="mt-4 p-3">
      <h3>CREATE YOUR ACCOUNT</h3>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required="true">
            <%if(error.name){%>
              <p style="color:red"><%=error.name.msg%></p>
            <%}%>
          </div>
          
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Enter email" required="true">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <%if(error.email){%>
              <p style="color:red"><%=error.email.msg%></p>
            <%}%>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required="true">
            <small class="form-text text-muted">password must be of 8 charcters</small>
            <%if(error.password){%>
              <p style="color:red"><%=error.password.msg%></p>
            <%}%>
          </div>
          <div class="form-group">
            <label for="cpassword">Confirm Password</label>
            <input type="password" class="form-control" id="cpassword" name="cpassword" placeholder="confirm password" required="true">
            <%if(error.cpassword){%>
              <p style="color:red"><%=error.cpassword.msg%></p>
            <%}%>
          </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone number" required="true">
            <%if(error.phone){%>
              <p style="color:red"><%=error.phone.msg%></p>
            <%}%>
        </div>
        <button type="submit" class="btn btn-warning" name="submit">Submit</button>
        <p>already a member? <a href="/login">LOG IN</a>
    </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
