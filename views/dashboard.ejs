<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-4 p-5 pr-0">
            <img src="css/images/user.png" alt="profile picture" style="width:7rem;" />
            <h3><%=user.name%></h3>
            <h5><%=user.email%></h5>
            <h5><%=user.phone%></h5>
            <button class="btn btn-dark btn-md">Edit Profile</button>
            <form action="/upload-picture" method="post">
                <input type="submit" class="btn btn-warning btn-md mt-1 mb-1" value="Upload Photo">
            </form>
            <form action="/logout" method="get">
                <input type="submit" class="btn btn-danger btn-md" value="Logout">
            </form>
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="row">
                <div class="col-4 btn btn-info">
                    All
                </div>
                <div class="col-4 btn btn-info">
                    Public
                </div>
                <div class="col-4 btn btn-info">
                    Private
                </div>
            </div>
            <div class="row m-auto p-0" style="overflow:scroll;height: 500px;">
                <%for(var i=0;i<8;i++){%>
                <div class="item col-lg-4 col-md-4 col-6 p-0">
                    <a href="css\images\Luxury-tourism-1024x761.jpg" class="fancybox" data-fancybox="gallery1">
                        <img src="css\images\Luxury-tourism-1024x761.jpg" alt="public image" width="100%" height="100%">
                    </a>
                </div>
                <%}%>
            </div>
        </div>
        <div class="col-lg-3 col-md-2">
            <div style="height:15rem;">
                <h3>Current Booking</h3>
            </div>
            <form action="/rooms">
            <button type="submit" class="btn btn-warning btn-md">Check Rooms</button>
            </form>
        </div>
    </div>
</div>
